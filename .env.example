# Network Configuration
HASHKEY_RPC_URL=https://mainnet.hashkey.com  # Hashkey Chain RPC endpoint
HASHKEY_CHAIN_ID=133                         # Hashkey Chain ID

# Deployment Keys
PRIVATE_KEY=your_private_key_here            # Deployer wallet private key
ADMIN_ADDRESS=your_admin_address_here        # Market admin address
TREASURY_ADDRESS=your_treasury_address_here   # Treasury wallet for fee collection

# Contract Addresses
WHSK_ADDRESS=your_whsk_token_address_here    # Wrapped HSK token address

# Market Configuration
MINIMUM_ASK_PRICE=10000000000000000         # Minimum listing price (0.01 HSK)
MAXIMUM_ASK_PRICE=1000000000000000000000    # Maximum listing price (1000 HSK)

# API Keys
HASHKEY_SCAN_API_KEY=your_api_key_here      # API key for contract verification

# Gas Configuration (Optional)
GAS_PRICE=5000000000                        # Custom gas price in wei
GAS_LIMIT=5000000                           # Custom gas limit for deployments

# Test Configuration (Optional)
FORK_BLOCK_NUMBER=1234567                   # Block number for forking mainnet
REPORT_GAS=true                             # Enable gas reporting in tests 